{
    "buildCommand": "python build_site.py",
    "outputDirectory": "site",
    "rewrites": [
        {
            "source": "/posts/:path*",
            "destination": "/posts/:path*.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "strict-origin-when-cross-origin"
                }
            ]
        }
    ]
}